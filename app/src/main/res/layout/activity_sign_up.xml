<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="smkn4.bdg.sipppid.layout.SignUpActivity"
    android:background="@color/background"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <ImageView
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/toolbar"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="13dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buat ID baru untuk mengakses PPID kemendagri dengan mudah lewat mobile apps dan website"
            android:textColor="#000"
            android:textSize="15dp"
            android:textAlignment="center"
            android:fontFamily="Comic Sans MS"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:textColor="#000"
            android:backgroundTint="#000"
            android:textColorHint="#000"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIK"
            android:textColor="#000"
            android:backgroundTint="#000"
            android:textColorHint="#000"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#000"
            android:layout_marginRight="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. Kontak"
            android:backgroundTint="#000"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="15dp"
            android:padding="10dp"
            android:backgroundTint="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff4949"
            android:textSize="15dp"
            android:text="Pastikan alamat email anda benar dan \n mengisi username dan password agar dapat login"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="15dp"
            android:padding="10dp"
            android:backgroundTint="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:backgroundTint="#000"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <CheckBox
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Saya setuju dengan Syarat dan Ketentuan yang ada"
            android:textColor="#ff4949"
            android:buttonTint="#000"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Daftar"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/button_biru"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    </ScrollView>

</LinearLayout>
